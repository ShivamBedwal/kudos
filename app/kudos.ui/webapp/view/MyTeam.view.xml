<mvc:View
    controllerName="kudos.ui.controller.MyTeam"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Table
        id="idAddTeamMember"
        inset="false"
    >
        <headerToolbar>
            <OverflowToolbar>
                <Text text="Add team member" />
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column />
            <Column />
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Input
                        id="idColleagueInput"
                        placeholder="Colleague name"
                        showSuggestion="true"
                        suggestionRows="{/Employees}"
                        suggestionItemSelected="onColleagueSelected"
                        change="onColleagueChange"
                    >
                        <suggestionColumns>
                            <Column
                                hAlign="Begin"
                                popinDisplay="Inline"
                                demandPopin="true"
                            >
                                <Label text="Name" />
                            </Column>
                            <Column
                                hAlign="Begin"
                                popinDisplay="Inline"
                                demandPopin="true"
                                minScreenWidth="Tablet"
                            >
                                <Label text="Email" />
                            </Column>
                        </suggestionColumns>
                        <suggestionRows>
                            <ColumnListItem>
                                <cells>
                                    <Label text="{name}" />
                                    <Label text="{email}" />
                                </cells>
                            </ColumnListItem>
                        </suggestionRows>
                    </Input>
                    <Button
                        id="idAddMemberButton"
                        press="onPressKudos"
                        icon="sap-icon://add"
                        type="Emphasized"                        
                    />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
    <Table
        id="idMyTeamTable"
        inset="false"
        noDataText="Add your team members to view their kudos count"
        items="{
			path: '',
            sorter: {
				path: 'total_kudos',
                descending: true
			}
		}"
        growing="true"
        growingThreshold="10"
    >
        <headerToolbar>
            <OverflowToolbar style="Clear">
                <Text text="Top kudoed colleagues in my team" />
                <ToolbarSpacer />
                <SearchField
                    placeholder="Search"
                    value="{ui>/globalFilter}"
                    search="filterGlobally"
                    width="15rem"
                />
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column />
            <Column />
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{name}" />
                    <HBox>
                        <core:Icon
                            src="sap-icon://thumb-up"
                            class="sapUiSmallMarginEnd"
                        />
                        <Text text="{total_kudos}" />
                    </HBox>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>

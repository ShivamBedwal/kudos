<mvc:View
    controllerName="kudos.ui.controller.MyTeam"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Table
        id="idMyTeamTable"
        inset="false"
        noDataText="Add your team members"
        items="{
			path: '/Employees',
            sorter: {
				path: 'total_kudos',
                descending: true
			}
		}"
        growing="true"
        growingThreshold="10"
    >
        <columns>
            <Column>
                <Text text="Colleague Name" />
            </Column>
            <Column>
                <Text text="Kudos count" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{name}" />
                    <HBox>
                        <core:Icon
                            src="sap-icon://thumb-up"
                            class="sapUiSmallMarginEnd"
                        />
                        <Text text="{total_kudos}" />
                    </HBox>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>

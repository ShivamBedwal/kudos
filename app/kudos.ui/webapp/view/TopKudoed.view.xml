<mvc:View
    controllerName="kudos.ui.controller.TopKudoed"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>

    <Table
        id="idTopKudoedTable"
        inset="false"
        noDataText="None has been kudoed. . Haw !"
        items="{
			path: '/Kudos'		
		}"
        growing="true"
        growingThreshold="10"
    >
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <Title
                        text="Below is the list of top kudoed employees !"
                        level="Auto"
                    />
                </content>
            </OverflowToolbar>
        </headerToolbar>

        <columns>
            <Column>
                <Text text="Colleague Name" />
            </Column>
            <Column>
                <Text text="Kudos count" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{kudos_to/name}"/>
                    <Button text="Count" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>

</mvc:View>
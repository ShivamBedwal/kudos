<mvc:View controllerName="kudos.ui.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:m="sap.m"		  
    height="100%">
	<ObjectPageLayout id="ObjectPageLayout"
		enableLazyLoading="true"
		useIconTabBar="true"
		showTitleInHeaderContent="true"
		upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="{/Employees(1289)/name}" wrapping="true"/>
				</expandedHeading>				

				<snappedHeading>
					<m:FlexBox fitContainer="true" alignItems="Center">
						<m:Avatar src="./test-resources/sap/uxap/images/imageID_275314.png" class="sapUiTinyMarginEnd"/>
						<m:Title text="{/Employees(1289)/name}" wrapping="true" />
					</m:FlexBox>
				</snappedHeading>

				<expandedContent>
					<m:Text text="{/Employees(1289)/designation}"/>
				</expandedContent>

				<snappedContent>
					<m:Text text="{/Employees(1289)/designation}"/>
				</snappedContent>

				<snappedTitleOnMobile>
					<m:Title text="{/Employees(1289)/designation}"/>
				</snappedTitleOnMobile>				
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true" >
				<m:Avatar class="sapUiSmallMarginEnd" src="./test-resources/sap/uxap/images/imageID_275314.png" displaySize="L" />

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Link text="{/Employees(1289)/email}"/>
					<m:Link text="{/Employees(1289)/contact}"/>
				</layout:VerticalLayout>

				<layout:HorizontalLayout class="sapUiSmallMarginBeginEnd">
					<m:Image src="./test-resources/sap/uxap/images/linkedin.png"/>
					<m:Image src="./test-resources/sap/uxap/images/Twitter.png" class="sapUiSmallMarginBegin"/>
			    </layout:HorizontalLayout>

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Label text="Hello! I am {/Employees(1289)/name} and I give Kudos !!!"/>					
				</layout:VerticalLayout>

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Label text="{/Employees(1289)/location}"/>
				</layout:VerticalLayout>
			</m:FlexBox>
		</headerContent>

		<sections>
			<ObjectPageSection titleUppercase="false" id="kudos" title="Give Kudos">
			<subSections>
				<ObjectPageSubSection id="kudosSubsection" titleUppercase="false">
					<blocks>
						<mvc:XMLView viewName="kudos.ui.view.Employee"/>
					</blocks>
				</ObjectPageSubSection>
			</subSections>
			</ObjectPageSection>

			<ObjectPageSection titleUppercase="false" id="topKudoed" title="Top Kudoed Colleagues">
				<subSections>
					<ObjectPageSubSection id="topKudoedSubsection" titleUppercase="false">
						<blocks>
							<m:Button text="Default" press="onPress" 
                                  ariaDescribedBy="defaultButtonDescription genericButtonDescription"> 
                            </m:Button>
						</blocks>
					</ObjectPageSubSection>					
				</subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>
</mvc:View>
